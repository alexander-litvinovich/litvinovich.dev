---
// You can have a single frontmatter section for the main component
const mainProps = Astro.props;
---

<!-- This is the main/default component of the file -->
<div class="main-component">
  <h2>{mainProps.title}</h2>
  <p>This is the main component from this file</p>
  
  <!-- Using the secondary components defined below -->
  <SecondaryComponent title="Secondary" />
  <TertiaryComponent count={3} />
</div>

<!-- Define additional components in the same file -->
<!-- Each component must be defined as an Astro component -->
<script>
  // Any shared client-side JS can go here
</script>

<!-- Secondary component definition -->
{/* Components can be defined using export syntax */}
export const SecondaryComponent = ({title}) => {
  return (
    <div class="secondary-component">
      <h3>{title}</h3>
      <p>This is a secondary component</p>
    </div>
  );
}

<!-- Tertiary component definition -->
{/* Another approach is using function declarations */}
export function TertiaryComponent({count}) {
  return (
    <div class="tertiary-component">
      <h4>Tertiary Component</h4>
      <ul>
        {Array.from({length: count}).map((_, i) => (
          <li>Item {i + 1}</li>
        ))}
      </ul>
    </div>
  );
}