---
const { texts } = Astro.props as { texts: [] };
---

<div class="MicroDesk">
  <div class="MicroDesk_grid">
    {texts.map((text) => <div class="MicroDesk_text">{text}</div>)}
  </div>
</div>

<style>
  .MicroDesk {
    margin: 0 var(--side-paddings);
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .MicroDesk_grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .MicroDesk::before {
    height: var(--border-width);
    display: block;
    background-color: var(--color-white-30);
    border-radius: calc(var(--border-width) / 2);
    content: "";
  }

  .MicroDesk_text {
    font-family: "Georgia";
    font-size: 12px;
    font-weight: 400;
    line-height: 14px;

    color: var(--color-white-30);
    font-style: normal;
  }
</style>
